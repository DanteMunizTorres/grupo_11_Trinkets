<%- include('./partials/head') %> 
<body>
    <<%- include('./partials/header') %> 
    <main>
        <div class="form-container">
            <h2 class="main-title-form">Completá tus datos</h2>
            <form action="POST" >
                <div class="form">
                    <div class="form-input">
                        <label for="name" class="input-label">Nombre</label>
                        <input type="text" id="name" value="Nombre" class="input input-name">                    
                    </div>

                    <div class="form-input">
                        <label for="surname" class="input-label">Apellido</label>
                        <input type="text" id="surname" value="Apellido" class="input input-surname"> 
                    </div>
                    

                    <div class="form-input">
                        <label for="dni" class="input-label">DNI</label>
                        <input type="number" id="dni" value="DNI" class="input input-dni">  
                    </div>
                    

                    <div class="form-input">
                        <label for="city" class="input-label">Ciudad</label>
                        <input type="text" id="city" value="Ciudad" class="input input-city">   
                    </div>
                    

                    <div class="form-input">
                        <label for="email" class="input-label">Email</label>
                        <input type="email" id="email" value="example@trinkets.com" class="input input-email">    
                    </div>
                    

                    <div class="form-input">
                        <label for="password" class="input-label">Contraseña</label>
                        <input type="password" id="password" value="name..." class="input input-password" minlength="8" maxlength="24">                    
                    </div>


                    <div class="input-terms">
                    <input type="checkbox" id="terms">
                    <label for="terms">Acepto términos y condiciones</label>
                    </div>
                </div>
                    
                    

                    
                <button type="submit" class="main-button">Continuar</button>   
            </form>  
       
        </div>


    </main>
    
    <%- include('./partials/footer') %> 
</body>
</html>